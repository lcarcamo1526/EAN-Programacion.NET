<Window x:Class="CRUD_Employees.UI.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRUD_Employees.UI"
        mc:Ignorable="d"
        Title="Login website" Height="450" Width="800">
    <StackPanel Margin="20">
        <Label Content="Login" FontSize="47" HorizontalAlignment="Center" Height="80" Width="134" Margin="94,0,174,0"/>
        <Label Content="Server name" FontSize="30"/>
        <TextBox x:Name="dbname" Height="34" Margin="10,0,0,0" FontSize="28"/>
        <Label Content="Username" FontSize="28"></Label>
        <TextBox x:Name="usernam_db" Height="34" Margin="10,0,0,0" FontSize="28"/>
        <Label Content="Password" FontSize="28"></Label>
        <PasswordBox x:Name="txtPassword" FontSize="28" Margin="10,0,0,0"/>
        <Button Content="Submit" Click="Submit_btn_Click" x:Name="submit_btn" FontSize="28" Height="62" Margin="129,0,105,0"/>



    </StackPanel>
</Window>
